<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" class="btn btn-block btn-social btn-facebook">
            <i class="fa fa-facebook"></i> {{ 'login.facebook_login'|trans }}
        </a>
    </div>
    <div class="form--option">
        {{ 'login.or'|trans }}
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" id="username" name="_username" required="required" class="form-control" autofocus="" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}">
        </div>
    </div>

    <div class="form-group">
        <input type="submit" id="_submit" name="_submit" class="btn btn-info btn-block" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>

    <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}" />

    <div class="form-group">
        <div class="col-md-12 control">
            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                {{ 'login.no_acount' | trans }}
                <a href="{{ path('fos_user_registration_register')}}">{{ 'login.register'|trans }}</a>
                <br>
                <a href="{{ path('fos_user_resetting_request') }}">{{ 'login.forgot_password'|trans }}</a>
            </div>
        </div>
    </div>
</form>