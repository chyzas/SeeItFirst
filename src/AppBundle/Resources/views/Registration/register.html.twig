{% extends "AppBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
                  class="fos_user_registration_register form-horizontal form-box">
                {{ form_widget(form) }}
                <div>
                    <input type="submit" id="_submit" name="_submit" class="btn btn-info btn-block"
                           value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
