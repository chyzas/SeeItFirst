{% extends '::base.html.twig' %}

{% block body %}
    <h3><a class="sif-white" href="{{ path('filter_create') }}"><span class="glyphicon glyphicon-plus sif-orange"></span>{{ 'filter_table.add'|trans }}</a></h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'filter_table.name'|trans }}</th>
            <th>{{ 'filter_table.url'|trans }}</th>
            <th>{{ 'filter_table.delete'|trans }}</th>
            <th>{{ 'filter_table.results'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for row in filters %}
            <tr>
                <th>
                    {{ row.filterName }}
                </th>
                <th>
                    <a href="{{ row.url }}" target="_blank">{{ row.url|length > 50 ? row.url|slice(0, 50) ~ '...' : row.url  }}</a>
                </th>
                <th>
                    <a href="{{ path('filter_delete', {'id': row.id }) }}"><span class="glyphicon glyphicon-remove"></span></a>
                </th>
                <th>
                    <a href="{{ path('filter_results', {'id': row.id}) }}"><span class="glyphicon glyphicon-list"></span></a>
                </th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
