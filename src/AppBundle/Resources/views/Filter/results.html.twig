{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Title</th>
                        <th>Link</th>
                        <th>Added On</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>

                {% for row in results %}
                    <tr>
                        <td>{{ row.price }}</td>
                        <td>{{ row.title }}</td>
                        <td>{{ row.url }}</td>
                        <td>{{ row.addedOn | date }}</td>
                        {% if row.isNew %}
                            <td><span class="label label-success">New</span>
                        {% else %}
                            <td><span class="label label-warning">Old</span>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
