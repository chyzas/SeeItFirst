{% extends 'AppBundle:Emails:template.html.twig' %}

{% block header %}
    <h2 class="align-center">{{ 'email.results.header'|trans }}</h2>
{% endblock %}

{% block body %}
    <table style="border-spacing: 0">
        <tbody>
            {% for item in data %}
                <tr>
                    <td colspan="2" class="align-left" style="padding-bottom: 10px; padding-top: 10px">{{ 'email.filter_name'|trans }}: <strong>{{ item['filter_name'] }}</strong></td>
                    <td class="align-rigt" style="padding-bottom: 10px; padding-top: 10px"><a class="no-decoration" href="{{ path('app_deactivate_filter', {'token': item['deactivation_token']}) }}">{{ 'email.unsuscribe'|trans }}</a></td>
                </tr>
                <tr style="background-color: #FAFAFA">
                    <th style="line-height: 30px">{{ 'results.title'|trans }}</th>
                    <th>{{ 'results.link'|trans }}</th>
                    <th>{{ 'results.price'|trans }}</th>
                </tr>
                {% for result in item['items'] %}
                    <tr>
                        <td>{{ result['title'] }}</td>
                        <td class="align-center"><a class="no-decoration" href="{{ result['url'] }}">{{ 'email.result_link'|trans }}</a></td>
                        <td class="align-right"><b style="color: red">{{ result['price'] }}</b></td>
                    </tr>
                    <tr>
                        <td style="border-bottom: 1px solid #ddd; padding-bottom: 10px" colspan="3">
                            <b>{{ result['details'] }}</b>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

